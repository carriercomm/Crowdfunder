<h1>Enter your pledge amount:</h1>

<%= form_for [@project, @pledge] do |f| %>
  <div class="field">
    <%= f.label :amount %><br>
    <%= f.text_field :amount %>
  </div>

  <h4>Add Tiers:</h4>
  <div id="tiers">
    <%= f.fields_for :tiers do |tier| %>
      <%= render 'tiers', :f => tier %>
    <% end %>
    <div class="links">
      <%= link_to_add_association 'add tier', f, :tiers, :partial => "projects/tiers" %>
    </div>
  </div>
  <div class="action">
    <%= f.submit %>
  </div>  
  
<% end %>

