<h1>Edit Project</h1>
<%= @project.name %><br>
<%= @project.start_date %><br>
<%= @project.finish_date %><br>
<%= @project.funding_goal %><br>

<%= form_for(@project ) do |f|%>
	<div class="field">
		<%= f.label :name %><br />
		<%= f.text_field :name %>
	</div>
	<div class="field">
		<%= f.label :description %><br />
		<%= f.text_area :description %>
	</div>
	<h4>Add Breakpoints:</h4>
	<div id="breakpoints">
    <%= f.fields_for :breakpoints do |breakpoint| %>
      <%= render 'breakpoints', :f => breakpoint %>
    <% end %>
    <div class="links">
	    <%= link_to_add_association 'add breakpoint', f, :breakpoints, :partial => "breakpoints" %>
	  </div>
	</div>
	<div class="action">
		<%= f.submit %>
	</div>
<% end %>
