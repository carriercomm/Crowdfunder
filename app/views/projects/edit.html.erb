<h1>Edit Project</h1>
<%= @project.name %><br>
<%= @project.start_date %><br>
<%= @project.finish_date %><br>
<%= @project.funding_goal %><br>

<%= form_for(@project) do |f|%>
	<div class="field">
		<%= f.label :name %><br />
		<%= f.text_field :name %>
	</div>
	<div class="field">
		<%= f.label :description %><br />
		<%= f.text_area :description %>
	</div>
	<div class="action">
		<%= f.submit %>
	</div>
<% end %>
